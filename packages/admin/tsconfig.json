{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./types/*"
      ]
    },
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "types/**/*",
    "src/**/*",
    "serve/**/*",
    "mock/**/*",
    "./package.json"
  ]
}
