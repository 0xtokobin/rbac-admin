{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./types/*"
      ]
    },
    "typeRoots": [
      "./types"
    ],
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
