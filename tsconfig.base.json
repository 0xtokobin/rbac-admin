{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "paths": {
      "@apps/admin/*": [
        "./apps/admin/src/*"
      ],
      "@apps/oa/*": [
        "./apps/oa/src/*"
      ],
      "@libs/common/*": [
        "./libs/common/src/*"
      ],
      "@libs/language/*": [
        "./libs/language/src/*"
      ],
      "#apps/admin/*": [
        "./apps/admin/types/*"
      ],
      "#apps/oa/*": [
        "./apps/oa/types/*"
      ],
      "#libs/common/*": [
        "./libs/common/types/*"
      ],
      "#libs/language/*": [
        "./libs/language/types/*"
      ]
    },
    "typeRoots": [
      "./types"
    ],
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
