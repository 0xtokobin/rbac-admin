{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./types"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "./packages/**/*",
    "./types/**/*",
    "./scripts/**/*",
    "package.json"
  ]
}
